<%- include("./partials/header") %>

<div class="container" id="container-login">
   <header class="header-box header-centered">
      <h1 class="header-title">Login</h1>
   </header>

   <form class="form" action="/login" method="POST">
      <ul class="form-input-list">
         <label class="form-label"  for="username">Username</label>
         <li><input class="form-input" id="username" type="text" name="username"></li>
         <label class="form-label" for="password">Password</label>
         <li><input class="form-input" id="password" type="password" name="password"></li>
         <li><button class="button">Login</button></li>
      </ul>
   </form>
</div>
<%- include("./partials/footer") %>